{
  "compilerOptions": {
    "lib": ["es5", "es6", "es2017", "esnext.asynciterable"],
    "rootDir": ".",
    "outDir": "build",
    "pretty": true,
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "strictNullChecks": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "declaration": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts", "test/**/*.ts"],
  "exclude": ["node_modules"],
}
